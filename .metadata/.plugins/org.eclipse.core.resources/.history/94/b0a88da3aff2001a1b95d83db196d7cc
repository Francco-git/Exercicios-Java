package Primeiro;

import java.util.Scanner;

public class Exercicio0909Laçoderepetiçao {

	public static void main(String[] args) {
		float v1,v2,v3;
		
		Scanner leitura	 = new Scanner(System.in);
		System.out.println("Entre com o primeiro numero: ");
		v1 = leitura.nextFloat();
		System.out.println("Entre com o segundo numero: ");
		v2 = leitura.nextFloat();
		System.out.println("Entre com o terceiro numero: ");
		v3 = leitura.nextFloat();
		
		 if (v1 > v2 || v1 < v2 ) {
	            if (v1 > v3 && v1 > v2) {
	                System.out.println(v1 + " é maior que "+ v2 +", "+ v3);
	            }
	            else if (v1 < v3 && v1 < v2) {
	                System.out.println(v1 + " é menor que "+ v2 +", "+ v3);
	            }
	        }
	        if (v2 > v1 || v2 < v1) {
	            if (v2 > v3 && v2 > v1) {
	                System.out.println(v2 + " é maior que "+ v1 +", "+ v3);
	            }
	            else if (v2 < v3 && v2 < v1) {
	                System.out.println(v2 + " é menor que "+ v1 +", "+ v3);
	            }
	        }
	        if (v3 > v1 || v3 < v1) {
	         if (v3 > v2 && v3 > v1) {
	                System.out.println(v3 + " é maior que "+ v1 +", "+ v2);
	            }
	         else if (v3 < v2 && v3 < v1) {
	                System.out.println(v3 + " é menor que "+ v1 +", "+ v2);
	
		
		
	


	}

}
